{
    "SchemaDefinition": "RedfishInteroperabilityProfile.v1_6_0",
    "ProfileName": "OCP Sustainability",
    "ProfileVersion": "0.2.0",
    "Purpose": "Describes Redfish requirements for providing data related to sustainability efforts.  This includes power and energy (use phase) measurements, location data, and device identification.",
    "OwningEntity": "OCP",
    "ContactInfo": "jeff.autor@ocproject.com",
    "Protocol": {
        "MinVersion": "1.6"
    },
    "Resources": {
        "EnvironmentMetrics": {
            "ReadRequirement": "Supported",
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/EnvironmentMetrics"
            ],
            "PropertyRequirements": {
                "PowerWatts": {
                    "ReadRequirement": "Supported",
                    "Purpose": "Notate the sampling rate, etc.",
                    "PropertyRequirements": {
                        "Reading": {}
                    }
                },
                "EnergykWh": {
                    "ReadRequirement": "Supported",
                    "Purpose": "Notate the sampling rate, accuracy, etc.",
                    "PropertyRequirements": {
                        "Reading": {},
                        "LifetimeReading": {
                            "ReadRequirement": "Recommended"
                        }
                    }
                }
            }
        },
        "Chassis": {
            "UseCases": [
                {
                    "UseCaseTitle": "General",
                    "UseCaseType": "Normal",
                    "ReadRequirement": "Mandatory",
                    "PropertyRequirements": {
                        "Manufacturer": {
                            "ReadRequirement": "Supported"
                        },
                        "Model": {
                            "ReadRequirement": "Supported"
                        },
                        "EnvironmentMetrics": {
                            "ReadRequirement": "Supported"
                        },
                        "Location": {
                            "ReadRequirement": "Supported",
                            "PropertyRequirements": {
                                "PhysicalAddress": {
                                    "ReadRequirement": "Recommended",
                                    "PropertyRequirements": {
                                        "ISOCountryCode": {
                                            "ReadRequirement": "Recommended"
                                        },
                                        "ISOSubdivisionCode": {
                                            "ReadRequirement": "Recommended"
                                        },
                                        "PostalCode": {
                                            "ReadRequirement": "Recommended"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "UseCaseTitle": "Product-level",
                    "Purpose": "Outer-most Chassis must contain product details and EnivronmentMetrics.",
                    "UseCaseKeyProperty": "ChassisType",
                    "UseCaseType": "Normal",
                    "UseCaseKeyValues": [
                        "RackMount",
                        "StandAlone",
                        "Rack"
                    ],
                    "UseCaseComparison": "AnyOf",
                    "PropertyRequirements": {
                        "ReadRequirement": "Mandatory",
                        "PropertyRequirements": {
                            "Manufacturer": {},
                            "Model": {},
                            "EnvironmentMetrics": {},
                            "Location": {
                                "ReadRequirement": "Mandatory",
                                "PropertyRequirements": {
                                    "PhysicalAddress": {
                                        "ReadRequirement": "Recommended",
                                        "PropertyRequirements": {
                                            "ISOCountryCode": {
                                                "ReadRequirement": "Recommended"
                                            },
                                            "ISOSubdivisionCode": {
                                                "ReadRequirement": "Recommended"
                                            },
                                            "PostalCode": {
                                                "ReadRequirement": "Recommended"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    },
    "Sensor": {
        "PropertyRequirements": {
            "LifetimeReading": {
                "ReadRequirement": "Conditional",
                "Purpose": "For energy sensors",
                "ConditionalRequirements": [
                    {
                        "CompareProperty": "ReadingType",
                        "CompareValues": [
                            "EnergykWh"
                        ],
                        "CompareType": "Equal",
                        "ReadRequirement": "Mandatory"
                    }
                ]
            },
            "Reading": {},
            "ReadingTime": {},
            "ReadingType": {},
            "SensingInterval": {}
        }
    }
}